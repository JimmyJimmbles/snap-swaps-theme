<section data-section-id="{{ section.id }}" class="section product-slider">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="block-heading">
          <h1 class="block-heading--title">
            {{ section.settings.header | escape }}
          </h1>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="slider product-slider" data-slide="" role="slider">
        <div class="slider-inner">
          {%- comment -%}
            Loop through each product and display them accordingly.
          {%- endcomment -%}
          {%- assign i = 0 -%}
          {% for product in collections.specials.products %}
          {% capture product_image %} {{ product | img_url }} {% endcapture %}
          {%- assign i = i | plus: 1 -%}
          {% if i == 1 %}
            <div class="slide active">
          {% else %}
            <div class="slide">
          {% endif %}
            <div class="product">
              <a href="{{ product.url }}">
                <img src="{{ product_image }}" alt="">
                {{ product.title }}
              </a>
              {{ product.description }}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Product Slider",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Section Heading",
        "default": "Example Section Heading"
      }
    ],
    "presets": [
      {
        "name": "Product Slider",
        "category": "Product"
      }
    ]
  }
{% endschema %}

