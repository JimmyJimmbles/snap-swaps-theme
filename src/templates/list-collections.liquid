{% comment %}
  This page represents the /collections and /products pages.
{% endcomment %}
<header id="header-collections" class="page-header" role="heading">
  <div class="header-title">
    <h1 class="header-title--text">Shop It</h1>
  </div>
</header>
<div class="container page-container collection-list">
  <div class="row">
    {% for collection in collections %}
      {% unless collection.handle == 'frontpage' %}
        {% capture collection_image %} {{ collection | img_url: '500x500' }} {% endcapture %}
        <div class="col-12 col-sm-6 col-md-4">
          <a
            class="product-image--link"
            href="{{ collection.url }}"
            title="{{ 'collections.general.link_title' | t: title: title }}"
            role="link">
              {% if collection.image != blank or collection.products.first != blank %}
              <div class="collection-img--wrapper">
                <img
                  class="product-image--img img-responsive"
                  src="{{ collection_image }}"
                  alt="{{ collection.title }}">
                  {{ 'collections.general.link_title' | t: title: title }}
                <div class="collection-overlay">
                  <h4 class="collection-overlay--title">
                    {{ collection.title }}
                  </h4>
                </div>
              </div>
              {% else %}
                {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                <div class="collection-img--wrapper">
                  {{ 'collection-' | append: current
                    | placeholder_svg_tag:
                    'placeholder-svg placeholder-svg--small' }}
                  <div class="collection-overlay">
                    <h4 class="collection-overlay--title">
                      {{ collection.title }}
                    </h4>
                  </div>
                </div>
              {% endif %}
          </a>
        </div>
      {% endunless %}
    {% endfor %}
  </div>
</div>
