{% paginate customer.addresses by 5 %}
  <header id="header-{{ page.handle }}" class="page-header parallax" role="heading">
    <div class="header-title blue">
      <h1 class="header-title--text">{{ 'customer.account.title' | t }}</h1>
    </div>
    <div class="header-content">
      <button type="button" class="button address-new-toggle pill-btn blue">
        {{ 'customer.addresses.add_new' | t }}
      </button>
    </div>
  </header>
  <div class="container page-container">
    <div class="row">
      <div class="col-12">
        <p>
          <a href="/account">{{ 'customer.account.return' | t }}</a>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div id="AddressNewForm" class="hide customer-form lg-form">
          {% form 'customer_address', customer.new_address %}

          <h1 class="customer-form--title">
            {{ 'customer.addresses.add_new' | t }}
          </h1>
          <div class="row">
            <div class="col-12">
              <div class="form-group">
                <label for="AddressFirstNameNew" class="form-label">
                  {{ 'customer.addresses.first_name' | t }}
                </label>
                <input type="text"
                       name="address[first_name]"
                       class="form-control"
                       id="AddressFirstNameNew"
                       value="{{ form.first_name }}"
                       autocapitalize="words">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="form-group">
                <label for="AddressLastNameNew" class="form-label">
                  {{ 'customer.addresses.last_name' | t }}
                </label>
                <input type="text"
                       name="address[last_name]"
                       class="form-control"
                       id="AddressLastNameNew"
                       value="{{ form.last_name }}"
                       autocapitalize="words">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="form-group">
                <label for="AddressCompanyNew" class="form-label">
                  {{ 'customer.addresses.company' | t }}
                </label>
                <input type="text"
                       class="form-control"
                       name="address[company]"
                       id="AddressCompanyNew"
                       value="{{ form.company }}"
                       autocapitalize="words">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-sm-7">
              <div class="form-group">
                <label for="AddressAddress1New" class="form-label">
                  {{ 'customer.addresses.address1' | t }}
                </label>
                <input type="text"
                       class="form-control"
                       name="address[address1]"
                       id="AddressAddress1New"
                       value="{{ form.address1 }}"
                       autocapitalize="words">
              </div>
            </div>
            <div class="col-12 col-sm-5">
              <div class="form-group">
                <label for="AddressAddress2New" class="form-label">
                  {{ 'customer.addresses.address2' | t }}
                </label>
                <input type="text"
                       class="form-control"
                       name="address[address2]"
                       id="AddressAddress2New"
                       value="{{ form.address2 }}"
                       autocapitalize="words">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-sm-8">
              <div class="form-group">
                <label for="AddressCityNew" class="form-label">
                  {{ 'customer.addresses.city' | t }}
                </label>
                <input type="text"
                       class="form-control"
                       name="address[city]"
                       id="AddressCityNew"
                       value="{{ form.city }}"
                       autocapitalize="words">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-sm-6">
              <div class="form-group">
                <label for="AddressCountryNew" class="form-label">
                  {{ 'customer.addresses.country' | t }}
                </label>
                <select
                  name="address[country]"
                  class="custom-select"
                  id="AddressCountryNew"
                  data-default="{{ form.country }}">
                  {{ country_option_tags }}
                </select>
              </div>
            </div>
            <div class="col-12 col-sm-6">
              <div id="AddressProvinceContainerNew" style="display: none">
                <div class="form-group">
                  <label for="AddressProvinceNew" class="form-label">
                    {{ 'customer.addresses.province' | t }}
                  </label>
                  <select
                    name="address[province]"
                    class="custom-select"
                    id="AddressProvinceNew"
                    data-default="{{ form.province }}">
                  </select>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-sm-4">
              <div class="form-group">
                <label for="AddressZipNew" class="form-label">
                  {{ 'customer.addresses.zip' | t }}
                </label>
                <input type="text"
                       class="form-control"
                       name="address[zip]"
                       id="AddressZipNew"
                       value="{{ form.zip }}"
                       autocapitalize="characters">
              </div>
            </div>
            <div class="col-12 col-sm-8">
              <div class="form-group">
                <label for="AddressPhoneNew" class="form-label">
                  {{ 'customer.addresses.phone' | t }}
                </label>
                <input type="tel"
                       class="form-control"
                       name="address[phone]"
                       id="AddressPhoneNew"
                       value="{{ form.phone }}"
                       pattern="[0-9\-]*">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="form-group">
                <div class="custom-control custom-checkbox">
                  {{ form.set_as_default_checkbox }}
                  <label for="address_default_address_new" class="form-check-label">
                    {{ 'customer.addresses.set_default' | t }}
                  </label>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-sm-6">
              <div class="form-group form--btn">
                <input type="submit" class="button customer-form--btn" value="{{ 'customer.addresses.add' | t }}">
              </div>
            </div>
            <div class="col-12 col-sm-6">
              <button type="button" class="customer-form--btn cancle address-new-toggle">
                {{ 'customer.addresses.cancel' | t }}
              </button>
            </div>
          </div>

          {% endform %}

        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <h2>{{ 'customer.addresses.title' | t }}</h2>

        {% for address in customer.addresses %}

          <div class="customer-form form-lg">
            <div class="row">
              <div class="col-12">
                {% if address == customer.default_address %}
                  <p><strong>{{ 'customer.addresses.default' | t }}</strong></p>
                {% endif %}
              </div>
              <div class="col-12">
                {{ address | format_address }}
              </div>
            </div>
            <div class="row">
              <div class="col-12 col-sm-6">
                <button type="button" class="address-edit-toggle pill-btn blue" data-form-id="{{ address.id }}">
                  {{ 'customer.addresses.edit' | t }}
                </button>
              </div>
              <div class="col-12 col-sm-6">
                <button type="button" class="address-delete pill-btn red" data-form-id="{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                  {{ 'customer.addresses.delete' | t }}
                </button>
              </div>
            </div>
            <!-- <p>
            {{ 'customer.addresses.edit' | t | edit_customer_address_link: address.id }} |
            {{ 'customer.addresses.delete' | t | delete_customer_address_link: address.id }}
            </p> -->
          </div>

          <div id="EditAddress_{{ address.id }}" class="hide customer-form form-lg">
            {% form 'customer_address', address %}

            <h4>{{ 'customer.addresses.edit_address' | t }}</h4>

            <label for="AddressFirstName_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.first_name' | t }}
            </label>
            <input type="text"
                   name="address[first_name]"
                   id="AddressFirstName_{{ form.id }}"
                   value="{{ form.first_name }}"
                   autocapitalize="words">

            <label for="AddressLastName_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.last_name' | t }}
            </label>
            <input type="text"
                   name="address[last_name]"
                   id="AddressLastName_{{ form.id }}"
                   value="{{ form.last_name }}"
                   autocapitalize="words">

            <label for="AddressCompany_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.company' | t }}
            </label>
            <input type="text"
                   name="address[company]"
                   id="AddressCompany_{{ form.id }}"
                   value="{{ form.company }}"
                   autocapitalize="words">

            <label for="AddressAddress1_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.address1' | t }}
            </label>
            <input type="text"
                   name="address[address1]"
                   id="AddressAddress1_{{ form.id }}"
                   value="{{ form.address1 }}"
                   autocapitalize="words">

            <label for="AddressAddress2_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.address2' | t }}
            </label>
            <input type="text"
                   name="address[address2]"
                   id="AddressAddress2_{{ form.id }}"
                   value="{{ form.address2 }}"
                   autocapitalize="words">

            <label for="AddressCity_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.city' | t }}
            </label>
            <input type="text"
                   name="address[city]"
                   id="AddressCity_{{ form.id }}"
                   value="{{ form.city }}"
                   autocapitalize="words">

            <label for="AddressCountry_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.country' | t }}
            </label>
            <select
              name="address[country]"
              id="AddressCountry_{{ form.id }}"
              class="address-country-option"
              data-form-id="{{ form.id }}"
              data-default="{{ form.country }}">
              {{ country_option_tags }}
            </select>

            <div id="AddressProvinceContainer_{{ form.id }}" style="display: none">
              <label for="AddressProvince_{{ form.id }}" class="form-label">
                {{ 'customer.addresses.province' | t }}
              </label>
              <select
                name="address[province]"
                id="AddressProvince_{{ form.id }}"
                data-default="{{ form.province }}">
              </select>
            </div>

            <label for="AddressZip_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.zip' | t }}
            </label>
            <input type="text"
                   name="address[zip]"
                   id="AddressZip_{{ form.id }}"
                   value="{{ form.zip }}"
                   autocapitalize="characters">

            <label for="AddressPhone_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.phone' | t }}
            </label>
            <input type="tel"
                   name="address[phone]"
                   id="AddressPhone_{{ form.id }}"
                   value="{{ form.phone }}"
                   pattern="[0-9\-]*">

            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_{{ form.id }}" class="form-label">
              {{ 'customer.addresses.set_default' | t }}
            </label>

            <input type="submit" class="button" value="{{ 'customer.addresses.update' | t }}">
            <button type="button" class="address-edit-toggle" data-form-id="{{ form.id }}">
              {{ 'customer.addresses.cancel' | t }}
            </button>

            {% endform %}

          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  {% if paginate.pages > 1 %}
    {% include 'pagination' %}
  {% endif %}
  <script>
    // Modified contents of customer_area.js (global asset)
    Shopify.CustomerAddress = {
      toggleForm: function(id) {
        console.log(id);
        var editEl = document.getElementById('EditAddress_'+id);
        editEl.style.display = editEl.style.display == 'none' ? '' : 'none';
        return false;
      },

      toggleNewForm: function() {
        var el = document.getElementById('AddAddress');
        el.style.display = el.style.display == 'none' ? '' : 'none';
        return false;
      },

      destroy: function(id, confirm_msg) {
        if (confirm(confirm_msg || "Are you sure you wish to delete this address?")) {
          Shopify.postLink('/account/addresses/'+id, {'parameters': {'_method': 'delete'}});
        }
      }
    }
  </script>
{% endpaginate %}
