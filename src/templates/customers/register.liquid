<header id="header-{{ page.handle }}" class="page-header parallax" role="heading">
  <div class="header-title yellow">
    <h1 class="header-title--text">{{ 'customer.register.title' | t }}</h1>
  </div>
</header>
<div class="container page-container">
  <div class="row">
    <div class="col-12">
      <div class="customer-form sm-form">
        {% form 'create_customer' %}

          <div class="form-group">
            <label for="FirstName" class="form-label">
              {{ 'customer.register.first_name' | t }}
            </label>
            <input type="text"
              class="form-control"
              name="customer[first_name]"
              id="FirstName"
              autofocus
              {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
              required>
          </div>

          <div class="form-group">
            <label for="LastName" class="form-label">
              {{ 'customer.register.last_name' | t }}
            </label>
            <input type="text"
              class="form-control"
              name="customer[last_name]"
              id="LastName"
              {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
              required>
          </div>

          <div class="form-group">
            <label for="Email" class="form-label">
              {{ 'customer.register.email' | t }}
            </label>
            <input type="email"
              name="customer[email]"
              id="Email"
              class="form-control {% if form.errors contains 'email' %}input-error{% endif %}"
              value="{% if form.email %}{{ form.email }}{% endif %}"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off">
          </div>

          <div class="form-group">
            <label for="CreatePassword" class="form-label">
              {{ 'customer.register.password' | t }}
            </label>
            <input type="password"
              name="customer[password]"
              id="CreatePassword"
              class="form-control {% if form.errors contains 'password' %}input-error{% endif %}">
          </div>

          <div class="form-errors">
            {{ form.errors | default_errors }}
          </div>
          <div class="form-group">
            <input type="submit" class="button customer-form--btn" value="{{ 'customer.register.submit' | t }}" class="button">
          </div>
          <div class="form-group">
            <a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>
